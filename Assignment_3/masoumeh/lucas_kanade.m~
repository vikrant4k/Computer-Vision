function[u,v]= lucas_kanade(patch_1, patch_2, sigma , filter_size)
    G=gauss1D( sigma , filter_size);
    Gx=gradient(G);
    Gy=gradient(reshape(G,filter_size,1));
    Ix = conv2(patch_1,Gx,'same');
    Iy = conv2(patch_1,Gy,'same');
    [Ix_h Ix_w] = size(Ix);
    Ix = reshape(Ix,Ix_h * Ix_w,1);
    size(Ix)

    [Iy_h Iy_w] = size(Iy);
    Iy = reshape(Iy,Iy_h * Iy_w,1);
    size(Iy)
    
    A = [Ix, Iy];
    A_T = A.';

    It = patch_2 - patch_1;
    [It_h It_w] = size(It);
    It = reshape(It,It_h * It_w,1);
    size(It)

v = 

end






